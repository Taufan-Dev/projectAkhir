<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:elevation="2dp">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Konfirmasi Pembayaran"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <include
                android:id="@+id/cardWisata"
                layout="@layout/item_wisata_favorite" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ringkasan"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                        <TextView android:text="Harga Tiket" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/tvHargaTiket" android:text="Rp 20.000" android:layout_alignParentEnd="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"/>
                    </RelativeLayout>

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                        <TextView android:text="Biaya Layanan" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Rp 4.000" android:layout_alignParentEnd="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB" android:layout_marginVertical="16dp"/>

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="Total Pembayaran" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"/>
                        <TextView android:id="@+id/tvTotalBayar" android:text="Rp 24.000" android:textStyle="bold" android:layout_alignParentEnd="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Tanggal Kunjungan"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <RelativeLayout
                        android:id="@+id/btnPilihTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_input_pembayaran"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivCalendar"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:layout_centerVertical="true"
                            app:tint="#1BBA85" />

                        <TextView
                            android:id="@+id/tvTanggalTerpilih"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/ivCalendar"
                            android:layout_marginStart="12dp"
                            android:text="Pilih tanggal"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metode Pembayaran"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <RadioGroup
                        android:id="@+id/rgPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <RadioButton
                            android:id="@+id/rbDana"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dana / OVO / GoPay"
                            android:padding="8dp"/>
                        <RadioButton
                            android:id="@+id/rbBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transfer Bank (VA)"
                            android:padding="8dp"/>
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBayarTiket"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:backgroundTint="#1BBA85"
        android:text="Bayar Tiket Sekarang"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="12dp" />

</LinearLayout>